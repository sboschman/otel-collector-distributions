{
  "release-type": "simple",
  "exclude-paths": [
    ".github"
  ],
  "packages": {
    "distributions/otelcol-cloudflare": {
      "package-name": "otelcol-cloudflare",
      "component": "otelcol-cloudflare",
      "extra-files": [
        {
          "type": "yaml",
          "path": "manifest.yaml",
          "jsonpath": "$.dist.version"
        }
      ]
    }
  },
  "pull-request-header": "Automated Release PR",
  "pull-request-title-pattern": "chore: release${component} ${version}"
}
